<h1>Austin's Favorite Spots</h1>



<table>
	<thead>
		<tr>Location</tr>
	</thead>

	<tbody>
		<% @locations.each do |location| %>
			<tr>
				<td><%= image_tag location.picture_url, width: "100" %> </td>
				<td><%= location.name %></td>
				<td><%= location.review.truncate(60) %></td>
				<td><%= link_to "Show", location %></td>
				<td><%= link_to "Edit", edit_location_path(location) %></td>
				<td><%= link_to "Remove", location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

